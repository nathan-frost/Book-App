<div class = "d-flex justify-content-between">
  <div>
    <h1>
      Search Results: <%= @search_book%>
    </h1>
  </div>
  <div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Search Again
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="new_book">Add New Book</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form action="/book_search" class="d-flex" role="search" method ="get">
              <input class="form-control me-2" type="search" placeholder="Search by Title" aria-label="Search" id="title_box" name="query_title">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<hr>

<div>
  <form action ="/insert_book" method="post">
    <div class="form-floating mb-3">
      <input type="title" class="form-control" name="query_title" id="query_title" placeholder="name@example.com" value="<%=@title %>">
      <label for="floatingInputValue">Title</label>    
    </div>
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Leave a comment here" id="query_description" name="query_description" style="height: 100px"><%=@description %></textarea>
      <label for="floatingTextarea2Disabled">Description</label>
    </div>
    <div class="form-floating">
      <select class="form-select" id="query_author" name="query_author" aria-label="Floating label disabled select example">
        <option selected>Select One Author</option>
        <% @authors.each do |author|%>
          <option value="<%= author%>"><%= author%></option>  
        <% end %>
      </select>
      <label for="floatingSelectDisabled">Works with selects</label>
    </div>

    <hr>

    <div class = "d-flex justify-content-evenly">

      <img src="<%= @image %>" alt="Thumbnail"/>

      <div>
        <div class="form-floating mb-3">
          <input type="text area" class="form-control fw-lighter" id="query_isbn13" name="query_isbn13" value="<%=@isbn %>" readonly="readonly">
          <label for="floatingInputValue">ISBN</label>
        </div>

        <div class="form-floating mb-3">
          <input type="text area" class="form-control fw-lighter" id="query_published_date" name="query_published_date" value=" <%=@published_date %>" readonly="readonly">
          <label for="floatingInputValue">Published Date</label>
        </div>

        <div class="form-floating mb-3">
          <input type="text area" class="form-control fw-lighter" id="query_page_count" name="query_page_count" value="<%=@page_count %>" readonly="readonly">
          <label for="floatingInputValue">Page Count</label>
        </div>

        <div class="form-floating mb-3">
          <input type="text area" class="form-control fw-lighter" id="query_publisher" name="query_publisher" value="<%=@publisher %>" readonly="readonly">
          <label for="floatingInputValue">Publisher</label>
        </div>
      </div>
    </div>
    <div class="d-grid gap-2">
      <button class="btn btn-primary">Add Book</button>
    </div>
  </form>
</div>

<hr>
